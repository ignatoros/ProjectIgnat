<Window x:Class="ProjectIgnat.WindowFolder.ServiceFolder.AddService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectIgnat.WindowFolder.ServiceFolder"
      mc:Ignorable="d" 
      Height="700" Width="900"
      Title="Авторизация"
      Loaded="Window_Loaded">
   

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="255"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="255"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
        
            
        
            <Image Grid.Row="1" Grid.Column="1"
                   Grid.ColumnSpan="1"
                   Source="/ResourceFolder/ImageFolder/AuthLogo.png"
                   Margin="10,10,10,10"/>
            <Label Grid.Row="2" Grid.Column="1"
                   Content="Имя" Style="{StaticResource NormalLabel}"/>
            <TextBox x:Name="NameTb" Grid.Row="2" Grid.Column="2"
                    />
            <Label Grid.Row="4" Grid.Column="1"
                   Content="Отчество" Style="{StaticResource NormalLabel}"/>
            <TextBox x:Name="SecondNameTb" Grid.Row="4" Grid.Column="2"
                     />
            <Label Content="Фамилия" Grid.Row="6"
                   Grid.Column="1" Style="{StaticResource NormalLabel}"/>
            <TextBox x:Name="LastNameTb" Grid.Row="6" Grid.Column="2"
                    />
            <Label Grid.Row="8" Grid.Column="1"
                   Content="Телефон" Style="{StaticResource NormalLabel}"/>
            <TextBox x:Name="NumberTb" Grid.Row="8" Grid.Column="2"
                    />
            <Label Grid.Row="2" Grid.Column="3"
                   Content="Описание" Style="{StaticResource NormalLabel}"/>
            <TextBox x:Name="DescriptionTb" Grid.Row="2" Grid.Column="4"
                  />
            <Label Grid.Row="4" Grid.Column="3"
                   Content="Статус" Style="{StaticResource NormalLabel}"/>
            <ComboBox x:Name="StatusСb" Grid.Row="4" Grid.Column="4" Margin="10"
                    />
            <Label Content="Сотрудник" Grid.Row="6"
                   Grid.Column="3" Style="{StaticResource NormalLabel}"/>
            <ComboBox x:Name="EmployeeCb" Grid.Row="6" Grid.Column="4" Margin="10"
                   />
            <StackPanel Grid.Row="10" Grid.Column="1"
                        Grid.ColumnSpan="4"
                        Margin="50,0,50,0">
                <Button x:Name="AuthBtn"
                        Content="Добавить"
                        Height="40"
                        Width="400"
                        Click="AuthBtn_Click"/>
                <Button x:Name="BackBtn"
                        Content="Назад"
                        Height="40"
                        Width="400"
                        Click="BackBtn_Click"/>
            </StackPanel>
        <Label Content="Добавление заявок" Grid.Column="2" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="4" FontSize="60"/>
    </Grid>
    
</Window>
